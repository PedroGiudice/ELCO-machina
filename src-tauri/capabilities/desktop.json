{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "desktop-only",
  "description": "Desktop-only capabilities (shell, updater, process, mcp-bridge)",
  "windows": ["main"],
  "platforms": ["linux", "macOS", "windows"],
  "permissions": [
    "shell:default",
    "shell:allow-open",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "args": true,
          "name": "binaries/voice-ai-sidecar",
          "sidecar": true
        }
      ]
    },
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "args": true,
          "name": "binaries/voice-ai-sidecar",
          "sidecar": true
        }
      ]
    },
    "mic-recorder:default",
    "updater:default",
    "process:default",
    "mcp-bridge:default"
  ]
}
